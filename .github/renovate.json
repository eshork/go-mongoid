{
  "extends": [
    "config:base",
    "schedule:weekends"
  ],
  "enabled": true,
  "semanticCommits": "enabled",
  "prHourlyLimit": 6,
  "prConcurrentLimit": 5,
  "rebaseWhen": "behind-base-branch",
  "stabilityDays": 5,
  "addLabels": [
    "dependencies"
  ],
  "assignees": [
    "eshork"
  ],
  "assignAutomerge": true,
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "packageRules": [
    {
      "description": "docker images can update automatically",
      "matchLanguages": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "rebaseWhen": "conflicted",
      "stabilityDays": 1,
      "automerge": true
    },
    {
      "description": "packages that should auto-update",
      "matchPackageNames": [
        "markbates/grift",
        "onsi/ginkgo",
        "onsi/gomega",
        "sirupsen/logrus"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
